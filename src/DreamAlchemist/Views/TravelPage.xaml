<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DreamAlchemist.ViewModels"
             x:Class="DreamAlchemist.Views.TravelPage"
             x:DataType="vm:TravelViewModel"
             Title="{Binding Title}"
             BackgroundColor="#0F0F1E">

    <Grid RowDefinitions="Auto,*" Padding="10">
        
        <!-- Header -->
        <Frame Grid.Row="0" BackgroundColor="#1A1A2E" Padding="15" Margin="0,0,0,10">
            <VerticalStackLayout Spacing="10">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="ðŸ—ºï¸ Travel"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="{Binding PlayerTierName, StringFormat='â€¢ {0}'}"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#8B5CF6"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
                <Label Text="{Binding CurrentCityName, StringFormat='Current: {0}'}"
                       FontSize="14"
                       TextColor="#06B6D4"/>
                <HorizontalStackLayout Spacing="15">
                    <Label Text="{Binding PlayerCoins, StringFormat='ðŸ’° {0:N0} coins'}"
                           FontSize="14"
                           TextColor="#FCD34D"/>
                    <Label Text="{Binding TotalReputation, StringFormat='â­ {0} total rep'}"
                           FontSize="14"
                           TextColor="#A78BFA"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="15">
                    <Label Text="{Binding TrustReputation, StringFormat='Trust: {0}'}"
                           FontSize="12"
                           TextColor="#10B981"/>
                    <Label Text="{Binding InfamyReputation, StringFormat='Infamy: {0}'}"
                           FontSize="12"
                           TextColor="#EF4444"/>
                    <Label Text="{Binding LucidityReputation, StringFormat='Lucidity: {0}'}"
                           FontSize="12"
                           TextColor="#8B5CF6"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <!-- Cities List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="10">
                <CollectionView ItemsSource="{Binding Cities}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:CityViewModel">
                            <Frame BackgroundColor="#25253E" Padding="15" Margin="0,5">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TravelViewModel}}, Path=SelectCityCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding City.Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="ðŸ“ Current"
                                           FontSize="12"
                                           TextColor="#10B981"
                                           IsVisible="{Binding IsCurrentCity}"/>
                                    
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding City.Description}"
                                           FontSize="12"
                                           TextColor="#9CA3AF"
                                           Margin="0,5,0,5"/>
                                    
                                    <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="15" Margin="0,0,0,10">
                                        <Label Text="{Binding TravelCost, StringFormat='ðŸ’° {0} coins'}"
                                               FontSize="12"
                                               TextColor="#FCD34D"/>
                                        <Label Text="{Binding TravelDays, StringFormat='â° {0} days'}"
                                               FontSize="12"
                                               TextColor="#06B6D4"/>
                                        <Label Text="{Binding RequiredReputation, StringFormat='â­ {0} rep required'}"
                                               FontSize="12"
                                               TextColor="#A78BFA"
                                               IsVisible="{Binding IsUnlocked, Converter={StaticResource InvertedBoolConverter}}"/>
                                    </HorizontalStackLayout>
                                    
                                    <!-- Show Travel button if can travel AND not current city -->
                                    <Button Grid.Row="3" Grid.ColumnSpan="2"
                                            Text="ðŸš€ Travel Here"
                                            BackgroundColor="#10B981"
                                            TextColor="White"
                                            FontAttributes="Bold"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TravelViewModel}}, Path=SelectCityCommand}"
                                            CommandParameter="{Binding .}">
                                        <Button.Triggers>
                                            <MultiTrigger TargetType="Button">
                                                <MultiTrigger.Conditions>
                                                    <BindingCondition Binding="{Binding CanTravel}" Value="True"/>
                                                    <BindingCondition Binding="{Binding IsCurrentCity}" Value="False"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="IsVisible" Value="True"/>
                                            </MultiTrigger>
                                        </Button.Triggers>
                                        <Button.IsVisible>False</Button.IsVisible>
                                    </Button>
                                    
                                    <!-- Show Locked if cannot travel AND not current city -->
                                    <Frame Grid.Row="3" Grid.ColumnSpan="2"
                                           BackgroundColor="Transparent"
                                           BorderColor="Transparent"
                                           Padding="0"
                                           InputTransparent="True">
                                        <Frame.Triggers>
                                            <MultiTrigger TargetType="Frame">
                                                <MultiTrigger.Conditions>
                                                    <BindingCondition Binding="{Binding CanTravel}" Value="False"/>
                                                    <BindingCondition Binding="{Binding IsCurrentCity}" Value="False"/>
                                                </MultiTrigger.Conditions>
                                                <Setter Property="IsVisible" Value="True"/>
                                            </MultiTrigger>
                                        </Frame.Triggers>
                                        <Frame.IsVisible>False</Frame.IsVisible>
                                        <Label Text="ðŸ”’ Locked - Tap for details"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#EF4444"
                                               HorizontalOptions="Center"
                                               Padding="10"
                                               InputTransparent="True"/>
                                    </Frame>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
                <!-- Status Message Display -->
                <Frame BackgroundColor="#1A1A2E" 
                       Padding="15" 
                       Margin="0,10,0,0"
                       IsVisible="{Binding TravelConfirmationMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}">
                    <Label Text="{Binding TravelConfirmationMessage}"
                           FontSize="14"
                           TextColor="White"
                           HorizontalTextAlignment="Center"/>
                </Frame>
                
                <!-- Confirmation Buttons -->
                <HorizontalStackLayout Spacing="10" 
                                       HorizontalOptions="Center"
                                       IsVisible="{Binding ShowTravelConfirmation}">
                    <Button Text="âœ… Confirm Travel"
                            BackgroundColor="#10B981"
                            TextColor="White"
                            FontAttributes="Bold"
                            Command="{Binding ConfirmTravelCommand}"
                            WidthRequest="150"/>
                    <Button Text="âŒ Cancel"
                            BackgroundColor="#EF4444"
                            TextColor="White"
                            FontAttributes="Bold"
                            Command="{Binding CancelTravelCommand}"
                            WidthRequest="150"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
