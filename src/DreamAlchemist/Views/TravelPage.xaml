<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DreamAlchemist.ViewModels"
             x:Class="DreamAlchemist.Views.TravelPage"
             x:DataType="vm:TravelViewModel"
             Title="{Binding Title}"
             BackgroundColor="#0F0F1E">

    <Grid RowDefinitions="Auto,*" Padding="10">
        
        <!-- Header -->
        <Frame Grid.Row="0" BackgroundColor="#1A1A2E" Padding="15" Margin="0,0,0,10">
            <VerticalStackLayout Spacing="10">
                <Label Text="ðŸ—ºï¸ Travel Between Cities"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"/>
                <Label Text="{Binding CurrentCityName, StringFormat='Current: {0}'}"
                       FontSize="14"
                       TextColor="#06B6D4"/>
                <Label Text="{Binding PlayerCoins, StringFormat='ðŸ’° {0:N0} coins'}"
                       FontSize="14"
                       TextColor="#FCD34D"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Cities List -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Cities}"
                        SelectedItem="{Binding SelectedCity}"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#25253E" Padding="15" Margin="0,5">
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding City.Name}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="White"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="Current"
                                   FontSize="12"
                                   TextColor="#10B981"
                                   IsVisible="{Binding IsCurrentCity}"/>
                            
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding City.Description}"
                                   FontSize="12"
                                   TextColor="#9CA3AF"/>
                            
                            <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="15">
                                <Label Text="{Binding TravelCost, StringFormat='ðŸ’° {0} coins'}"
                                       FontSize="12"
                                       TextColor="#FCD34D"/>
                                <Label Text="{Binding TravelDays, StringFormat='â° {0} days'}"
                                       FontSize="12"
                                       TextColor="#06B6D4"/>
                                <Label Text="ðŸ”’ Locked"
                                       FontSize="12"
                                       TextColor="#EF4444"
                                       IsVisible="{Binding IsUnlocked, Converter={StaticResource InvertedBoolConverter}}"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
