<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DreamAlchemist.ViewModels"
             x:Class="DreamAlchemist.Views.MainPage"
             x:DataType="vm:MainViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Player Info Card -->
            <Frame BackgroundColor="{DynamicResource ThemeBackgroundSecondary}" CornerRadius="15" Padding="20" BorderColor="{DynamicResource ThemePrimary}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding PlayerName}" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource ThemeTextPrimary}"/>
                    
                    <HorizontalStackLayout Spacing="20">
                        <Label Text="{Binding PlayerCoins, StringFormat='ðŸ’° {0:N0} coins'}"
                               FontSize="18"
                               TextColor="{DynamicResource ThemeAccent3}"/>
                        <Label Text="{Binding CurrentDay, StringFormat='ðŸ“… Day {0}'}"
                               FontSize="18"
                               TextColor="{DynamicResource ThemeSecondary}"/>
                    </HorizontalStackLayout>
                    
                    <Label Text="{Binding CurrentCityName, StringFormat='ðŸ“ {0}'}"
                           FontSize="16"
                           TextColor="{DynamicResource ThemeTextSecondary}"/>
                    
                    <Label Text="{Binding PlayerTierName}"
                           FontSize="14"
                           TextColor="{DynamicResource ThemePrimary}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Quick Stats -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                <Frame Grid.Column="0" BackgroundColor="{DynamicResource ThemeBackgroundTertiary}" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Trust"
                               FontSize="12"
                               TextColor="{DynamicResource ThemeTextSecondary}"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding TrustReputation}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource ThemeSuccess}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                
                <Frame Grid.Column="1" BackgroundColor="{DynamicResource ThemeBackgroundTertiary}" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Infamy"
                               FontSize="12"
                               TextColor="{DynamicResource ThemeTextSecondary}"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding InfamyReputation}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource ThemeDanger}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                
                <Frame Grid.Column="2" BackgroundColor="{DynamicResource ThemeBackgroundTertiary}" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Lucidity"
                               FontSize="12"
                               TextColor="{DynamicResource ThemeTextSecondary}"
                               HorizontalOptions="Center"/>
                        <Label Text="{Binding LucidityReputation}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource ThemePrimary}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Quick Status -->
            <Frame BackgroundColor="{DynamicResource ThemeBackgroundTertiary}" Padding="15">
                <Label Text="{Binding QuickStatus}"
                       FontSize="14"
                       TextColor="{DynamicResource ThemeTextPrimary}"
                       HorizontalOptions="Center"/>
            </Frame>

            <!-- Navigation Buttons -->
            <VerticalStackLayout Spacing="15">
                <Button Text="ðŸª Dream Market"
                        Command="{Binding NavigateToMarketCommand}"
                        BackgroundColor="{DynamicResource ThemePrimary}"
                        TextColor="{DynamicResource ThemeTextPrimary}"
                        HeightRequest="60"
                        FontSize="18"
                        CornerRadius="10"/>
                
                <Button Text="ðŸ§ª Synthesis Lab"
                        Command="{Binding NavigateToLabCommand}"
                        BackgroundColor="{DynamicResource ThemeAccent1}"
                        TextColor="{DynamicResource ThemeTextPrimary}"
                        HeightRequest="60"
                        FontSize="18"
                        CornerRadius="10"/>
                
                <Button Text="ðŸŽ’ Inventory"
                        Command="{Binding NavigateToInventoryCommand}"
                        BackgroundColor="{DynamicResource ThemeSecondary}"
                        TextColor="{DynamicResource ThemeTextPrimary}"
                        HeightRequest="60"
                        FontSize="18"
                        CornerRadius="10"/>
                
                <Button Text="ðŸ—ºï¸ Travel"
                        Command="{Binding NavigateToTravelCommand}"
                        BackgroundColor="{DynamicResource ThemeAccent3}"
                        TextColor="{DynamicResource ThemeTextPrimary}"
                        HeightRequest="60"
                        FontSize="18"
                        CornerRadius="10"/>
            </VerticalStackLayout>

            <!-- Progress Day Button -->
            <Button Text="â° Sleep (Progress 1 Day)"
                    Command="{Binding ProgressDayCommand}"
                    BackgroundColor="{DynamicResource ThemeBorder}"
                    TextColor="{DynamicResource ThemeTextPrimary}"
                    HeightRequest="50"
                    FontSize="16"
                    CornerRadius="10"
                    Margin="0,10,0,0"/>
            
            <!-- Diagnostic Button (DEBUG ONLY - visibility and handler set in code-behind) -->
            <Button x:Name="DiagnosticsButton"
                    Text="ðŸ”§ System Diagnostics"
                    BackgroundColor="{DynamicResource ThemeDanger}"
                    TextColor="{DynamicResource ThemeTextPrimary}"
                    HeightRequest="40"
                    FontSize="14"
                    CornerRadius="10"
                    Margin="0,5,0,0"
                    IsVisible="False"/>

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="{DynamicResource ThemeDanger}"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                   HorizontalOptions="Center"/>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="{DynamicResource ThemePrimary}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
