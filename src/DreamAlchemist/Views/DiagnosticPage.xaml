<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DreamAlchemist.Views.DiagnosticPage"
             Title="Diagnostics"
             BackgroundColor="#0F0F1E">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Market Diagnostics" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="White"/>
            
            <Button Text="Run Diagnostics" 
                    Clicked="OnRunDiagnostics"
                    BackgroundColor="#374151"
                    TextColor="White"/>
            
            <Label x:Name="DiagnosticOutput"
                   Text="Click 'Run Diagnostics' to check the market system"
                   TextColor="White"
                   FontSize="12"
                   FontFamily="Courier New"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
