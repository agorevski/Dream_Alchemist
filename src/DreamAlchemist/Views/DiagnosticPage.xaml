<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DreamAlchemist.ViewModels"
             x:Class="DreamAlchemist.Views.DiagnosticPage"
             x:DataType="vm:DiagnosticViewModel"
             Title="{Binding Title}"
             BackgroundColor="#0F0F1E">

    <Grid RowDefinitions="Auto,Auto,*" Padding="20" RowSpacing="15">
        
        <!-- Header Card -->
        <Frame Grid.Row="0" 
               BackgroundColor="#1A1A2E" 
               CornerRadius="15" 
               Padding="20">
            <VerticalStackLayout Spacing="10">
                <Label Text="System Diagnostics" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                
                <Label Text="Comprehensive test suite for all game systems" 
                       FontSize="14" 
                       TextColor="#9CA3AF"
                       HorizontalOptions="Center"/>
                
                <Button Text="▶ Run Full Diagnostic Suite"
                        Command="{Binding RunDiagnosticsCommand}"
                        BackgroundColor="#8B5CF6"
                        TextColor="White"
                        HeightRequest="50"
                        FontSize="16"
                        CornerRadius="10"
                        Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Status Summary Card -->
        <Frame Grid.Row="1" 
               BackgroundColor="#1A1A2E" 
               CornerRadius="15" 
               Padding="15"
               IsVisible="{Binding TotalTests, Converter={StaticResource IsNotNullConverter}}">
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Total"
                           FontSize="12"
                           TextColor="#9CA3AF"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding TotalTests}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
                
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="✅ Pass"
                           FontSize="12"
                           TextColor="#9CA3AF"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding PassedTests}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#10B981"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
                
                <VerticalStackLayout Grid.Column="2">
                    <Label Text="❌ Fail"
                           FontSize="12"
                           TextColor="#9CA3AF"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding FailedTests}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#EF4444"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
                
                <VerticalStackLayout Grid.Column="3">
                    <Label Text="⚠️ Warn"
                           FontSize="12"
                           TextColor="#9CA3AF"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding WarningTests}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#F59E0B"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <!-- Diagnostic Output -->
        <Frame Grid.Row="2" 
               BackgroundColor="#1A1A2E" 
               CornerRadius="15" 
               Padding="0">
            <ScrollView>
                <Label Text="{Binding DiagnosticOutput}"
                       TextColor="#E5E7EB"
                       FontSize="11"
                       FontFamily="Courier New"
                       Padding="15"
                       LineBreakMode="NoWrap"/>
            </ScrollView>
        </Frame>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="0"
                          Grid.RowSpan="3"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          Color="#8B5CF6"
                          WidthRequest="60"
                          HeightRequest="60"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>

</ContentPage>
