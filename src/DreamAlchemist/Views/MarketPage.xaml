<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DreamAlchemist.ViewModels"
             xmlns:dto="clr-namespace:DreamAlchemist.Models.DTOs"
             x:Class="DreamAlchemist.Views.MarketPage"
             x:DataType="vm:MarketViewModel"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource ThemeBackgroundPrimary}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        
        <!-- Header -->
        <Frame Grid.Row="0" BackgroundColor="{DynamicResource ThemeBackgroundSecondary}" Padding="15" Margin="0,0,0,10" BorderColor="{DynamicResource ThemePrimary}">
            <VerticalStackLayout Spacing="10">
                <Label Text="{Binding CurrentCityName, StringFormat='Market in {0}'}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource ThemeTextPrimary}"/>
                <Label Text="{Binding PlayerCoins, StringFormat='ðŸ’° {0:N0} coins'}"
                       FontSize="16"
                       TextColor="{DynamicResource ThemeAccent3}"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Market Items List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding MarketItems}"
                        SelectedItem="{Binding SelectedItem}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding SelectionChangedCommand}"
                        SelectionChangedCommandParameter="{Binding SelectedItem}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="dto:MarketPriceDto">
                    <Border BackgroundColor="{DynamicResource ThemeBackgroundTertiary}" 
                            Padding="15" 
                            Margin="0,5"
                            StrokeThickness="2"
                            Stroke="{DynamicResource ThemeBorder}">
                        <Border.Triggers>
                            <DataTrigger TargetType="Border" 
                                        Binding="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=SelectedItem.IngredientId}" 
                                        Value="{Binding IngredientId}">
                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ThemeBackgroundElevated}, Dark={StaticResource ThemeBackgroundElevated}}"/>
                                <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource ThemePrimary}, Dark={StaticResource ThemePrimary}}"/>
                            </DataTrigger>
                        </Border.Triggers>
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding IngredientName}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource ThemeTextPrimary}"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding Rarity}"
                                   FontSize="12"
                                   TextColor="{DynamicResource ThemePrimary}"/>
                            
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding CurrentPrice, StringFormat='ðŸ’° {0:N0} coins'}"
                                   FontSize="16"
                                   TextColor="{DynamicResource ThemeAccent3}"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding PriceChangePercent, StringFormat='{0:+0.0;-0.0}%'}"
                                   FontSize="14"
                                   TextColor="{Binding PriceChangePercent, Converter={StaticResource PriceChangeToColorConverter}}"/>
                            
                            <HorizontalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="15">
                                <Label Text="{Binding AvailableQuantity, StringFormat='Available: {0}'}"
                                       FontSize="12"
                                       TextColor="{DynamicResource ThemeTextSecondary}"/>
                                <Label Text="{Binding PlayerQuantity, StringFormat='You own: {0}'}"
                                       FontSize="12"
                                       TextColor="{DynamicResource ThemeSuccess}"
                                       FontAttributes="Bold"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10" Padding="0,10,0,0">
            <Button Grid.Column="0"
                    Text="Buy"
                    Command="{Binding BuyItemCommand}"
                    BackgroundColor="{DynamicResource ThemeSuccess}"
                    TextColor="{DynamicResource ThemeTextPrimary}"
                    HeightRequest="50"
                    FontSize="18"
                    IsEnabled="{Binding CanBuy}"/>
            <Button Grid.Column="1"
                    Text="Sell"
                    Command="{Binding SellItemCommand}"
                    BackgroundColor="{DynamicResource ThemeDanger}"
                    TextColor="{DynamicResource ThemeTextPrimary}"
                    HeightRequest="50"
                    FontSize="18"
                    IsEnabled="{Binding CanSell}"/>
        </Grid>
    </Grid>

</ContentPage>
