<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DreamAlchemist.ViewModels"
             xmlns:entities="clr-namespace:DreamAlchemist.Models.Entities"
             x:Class="DreamAlchemist.Views.LabPage"
             x:DataType="vm:LabViewModel"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource ThemeBackgroundPrimary}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        
        <!-- Header -->
        <Frame Grid.Row="0" BackgroundColor="{DynamicResource ThemeBackgroundSecondary}" Padding="15" Margin="0,0,0,10" BorderColor="{DynamicResource ThemeAccent1}">
            <VerticalStackLayout Spacing="10">
                <Label Text="ðŸ§ª Dream Synthesis Lab"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource ThemeTextPrimary}"/>
                <Label Text="{Binding SelectedIngredients.Count, StringFormat='Selected: {0}/3 ingredients'}"
                       FontSize="14"
                       TextColor="{DynamicResource ThemeAccent1}"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Content Tabs -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">
            <Grid Grid.Row="0" ColumnDefinitions="*,*" ColumnSpacing="5" Padding="0,0,0,10">
                <Button Grid.Column="0" Text="Available Ingredients" 
                        BackgroundColor="{DynamicResource ThemeBorder}" TextColor="{DynamicResource ThemeTextPrimary}"/>
                <Button Grid.Column="1" Text="Recipes" 
                        BackgroundColor="{DynamicResource ThemeBorder}" TextColor="{DynamicResource ThemeTextPrimary}"/>
            </Grid>
            
            <!-- Available Ingredients -->
            <CollectionView Grid.Row="1"
                            ItemsSource="{Binding AvailableIngredients}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="entities:Ingredient">
                        <Frame BackgroundColor="{DynamicResource ThemeBackgroundTertiary}" Padding="15" Margin="0,5">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="{Binding Name}"
                                           FontSize="16"
                                           TextColor="{DynamicResource ThemeTextPrimary}"/>
                                    <Label Text="{Binding Rarity}"
                                           FontSize="12"
                                           TextColor="{DynamicResource ThemePrimary}"/>
                                </VerticalStackLayout>
                                <Button Grid.Column="1"
                                        Text="+"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:LabViewModel}}, Path=AddIngredientCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{DynamicResource ThemeSuccess}"
                                        TextColor="{DynamicResource ThemeTextPrimary}"
                                        WidthRequest="50"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- Action Buttons -->
        <VerticalStackLayout Grid.Row="2" Spacing="10" Padding="0,10,0,0">
            <Button Text="âœ¨ Craft Dream"
                    Command="{Binding CraftDreamCommand}"
                    BackgroundColor="{DynamicResource ThemeAccent1}"
                    TextColor="{DynamicResource ThemeTextPrimary}"
                    HeightRequest="50"
                    FontSize="18"
                    IsEnabled="{Binding CanCraft}"/>
            <Button Text="Clear Selection"
                    Command="{Binding ClearIngredientsCommand}"
                    BackgroundColor="{DynamicResource ThemeBorder}"
                    TextColor="{DynamicResource ThemeTextPrimary}"
                    HeightRequest="40"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
