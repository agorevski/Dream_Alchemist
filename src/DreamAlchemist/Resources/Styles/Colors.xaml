<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->
    
    <!-- ==================== DYNAMIC THEME COLORS ==================== -->
    <!-- These colors are managed by ThemeService and update based on selected theme -->
    
    <!-- Primary Colors -->
    <Color x:Key="ThemePrimary">#A855F7</Color>
    <Color x:Key="ThemePrimaryLight">#C084FC</Color>
    <Color x:Key="ThemePrimaryDark">#7E22CE</Color>
    
    <!-- Secondary Colors -->
    <Color x:Key="ThemeSecondary">#06B6D4</Color>
    <Color x:Key="ThemeSecondaryLight">#22D3EE</Color>
    <Color x:Key="ThemeSecondaryDark">#0891B2</Color>
    
    <!-- Background Colors -->
    <Color x:Key="ThemeBackgroundPrimary">#0A0E27</Color>
    <Color x:Key="ThemeBackgroundSecondary">#1A1F3A</Color>
    <Color x:Key="ThemeBackgroundTertiary">#252B4D</Color>
    <Color x:Key="ThemeBackgroundElevated">#303660</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="ThemeAccentPink">#EC4899</Color>
    <Color x:Key="ThemeAccentBlue">#3B82F6</Color>
    <Color x:Key="ThemeAccentGold">#FCD34D</Color>
    <Color x:Key="ThemeAccentGreen">#10B981</Color>
    
    <!-- Status Colors -->
    <Color x:Key="ThemeSuccess">#10B981</Color>
    <Color x:Key="ThemeDanger">#EF4444</Color>
    <Color x:Key="ThemeWarning">#F59E0B</Color>
    <Color x:Key="ThemeInfo">#06B6D4</Color>
    
    <!-- Text Colors -->
    <Color x:Key="ThemeTextPrimary">#FFFFFF</Color>
    <Color x:Key="ThemeTextSecondary">#E5E7EB</Color>
    <Color x:Key="ThemeTextTertiary">#9CA3AF</Color>
    <Color x:Key="ThemeTextDisabled">#6B7280</Color>
    
    <!-- Rarity Colors -->
    <Color x:Key="ThemeRarityCommon">#94A3B8</Color>
    <Color x:Key="ThemeRarityUncommon">#22D3EE</Color>
    <Color x:Key="ThemeRarityRare">#A855F7</Color>
    <Color x:Key="ThemeRarityEpic">#F59E0B</Color>
    <Color x:Key="ThemeRarityMythic">#EC4899</Color>
    
    <!-- Border & Divider Colors -->
    <Color x:Key="ThemeBorder">#374151</Color>
    <Color x:Key="ThemeBorderFocus">#A855F7</Color>
    <Color x:Key="ThemeDivider">#4B5563</Color>

    <!-- ==================== STATIC/LEGACY COLORS ==================== -->
    <!-- Kept for backward compatibility -->
    
    <Color x:Key="Primary">#A855F7</Color>
    <Color x:Key="PrimaryDark">#7E22CE</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#06B6D4</Color>
    <Color x:Key="SecondaryDarkText">#22D3EE</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- Solid Color Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource ThemePrimary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource ThemeSecondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- ==================== DYNAMIC FONT RESOURCES ==================== -->
    <!-- These fonts are managed by ThemeService and update based on selected font scheme -->
    
    <!-- Display Fonts (Headings) -->
    <x:String x:Key="FontDisplay">Cinzel</x:String>
    <x:String x:Key="FontDisplayBold">CinzelBold</x:String>
    
    <!-- Body Fonts (Content Text) -->
    <x:String x:Key="FontBody">Outfit</x:String>
    <x:String x:Key="FontBodySemiBold">OutfitSemiBold</x:String>
    <x:String x:Key="FontBodyBold">OutfitBold</x:String>
    
    <!-- Accent Fonts (Special Emphasis) -->
    <x:String x:Key="FontAccent">Philosopher</x:String>
    <x:String x:Key="FontAccentBold">PhilosopherBold</x:String>
    
    <!-- Monospace (Numbers, Stats) -->
    <x:String x:Key="FontMono">JetBrainsMono</x:String>

</ResourceDictionary>
